{#
  Reusable results table partial for import/export management

  Required parameters:
  - previewEntities: array of entities to display
  - tableColumns: configuration for table columns
  - tableConfigService: service for extracting values
  - currentPage: current page number
  - nEntriesPerPage: entries per page
  - hasMore: whether more results exist
  - routeName: route name for pagination links
  - showImportAction: boolean, whether to show import button (default: false)
#}

{% if previewEntities is defined and previewEntities|length > 0 %}
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fa fa-table" aria-hidden="true"></i>
                {{ 'import.preview_results'|trans }}
                <span class="badge bg-primary ms-2">{{ previewEntities|length }} {{ 'import.items'|trans }}</span>
            </h5>
            <div class="text-muted">
                {{ 'import.page'|trans }}
                {{ currentPage + 1 }}
                {% if hasMore %}
                    <span class="text-muted">{{ 'import.more_available'|trans }}</span>
                {% endif %}
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive table-responsive-stack">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            {% for columnKey, column in tableColumns %}
                                <th scope="col" class="{{ column.class ?? '' }}">
                                    {{ column.label }}
                                    {% if column.sortable %}
                                        <i class="fa fa-sort text-muted" aria-hidden="true"></i>
                                    {% endif %}
                                </th>
                            {% endfor %}
                            {% if showImportAction is defined and showImportAction %}
                                <th scope="col" width="120">{{ 'label.actions'|trans }}</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in previewEntities %}
                            <tr>
                                {% for columnKey, column in tableColumns %}
                                    {% set value = null %}
                                    {% set isArray = entity is iterable and not (entity is defined and attribute(entity, 'getId') is defined) %}
                                    {% if isArray %}
                                        {# For raw data arrays (import): use extractValue with path #}
                                        {% set value = tableConfigService.extractValue(entity, column.path ?? column.property, column.fallback_path ?? null) %}
                                    {% elseif column.property is defined %}
                                        {# For entity objects (export): use extractEntityValue #}
                                        {% set value = tableConfigService.extractEntityValue(entity, column.property) %}
                                    {% elseif column.path is defined %}
                                        {# Fallback for raw data: use extractValue #}
                                        {% set value = tableConfigService.extractValue(entity, column.path, column.fallback_path ?? null) %}
                                    {% endif %}
                                    <td data-label="{{ column.label }}" class="{{ column.class ?? '' }}">
                                        {% if value %}
                                            {% if columnKey == 'global_object_id' %}
                                                <small>{{ value }}</small>
                                            {% else %}
                                                {{ value }}
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">â€”</span>
                                        {% endif %}
                                    </td>
                                {% endfor %}
                                {% if showImportAction is defined and showImportAction %}
                                    <td data-label="{{ 'label.actions'|trans }}">
                                        {% set globalObjectId = tableConfigService.extractValue(entity, '_global_object_id') %}
                                        {% set objectType = entity._objecttype ?? 'fungarium' %}
                                        {% if globalObjectId %}
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="https://www.nahima.ethz.ch/#/detail/{{ entity._uuid }}"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="{{ 'action.view_details'|trans }}"
                                                   data-toggle="tooltip"
                                                   target="_blank"
                                                   rel="noopener">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                </a>
                                                <form method="post"
                                                      action="{{ path('app_import_management_one_goi', {globalObjectId: globalObjectId}) }}"
                                                      style="display: inline;"
                                                      data-controller="import-item"
                                                      data-action="submit->import-item#submit">
                                                    <button type="submit"
                                                            class="btn btn-outline-success btn-sm"
                                                            title="{{ 'action.import_this_item'|trans }}"
                                                            data-toggle="tooltip"
                                                            data-import-item-target="button">
                                                        <i class="fa fa-download" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        {% endif %}
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Pagination -->
        {% if currentPage > 0 or hasMore %}
            <div class="card-footer">
                <nav aria-label="Table pagination">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Showing
                            {{ (currentPage * nEntriesPerPage) + 1 }}
                            -
                            {{ (currentPage * nEntriesPerPage) + previewEntities|length }}
                            of
                            {% if hasMore %}many{% else %}{{ (currentPage * nEntriesPerPage) + previewEntities|length }}{% endif %}
                            items
                        </div>
                        <div class="btn-group" role="group">
                            {% if currentPage > 0 %}
                                <a href="{{ path(routeName, app.request.query.all|merge({page: currentPage - 1})) }}"
                                   class="btn btn-outline-primary">
                                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                    Previous
                                </a>
                            {% endif %}
                            {% if hasMore %}
                                <a href="{{ path(routeName, app.request.query.all|merge({page: currentPage + 1})) }}"
                                   class="btn btn-outline-primary">
                                    Next
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </nav>
            </div>
        {% endif %}
    </div>
{% endif %}
