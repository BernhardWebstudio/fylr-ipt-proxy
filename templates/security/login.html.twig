{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login.title'|trans }}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				{{ 'login.you_are_logged_in_as'|trans }}
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 fw-normal">{{ 'login.heading'|trans }}</h1>
		<p>
			{{ 'login.nahima_info'|trans }}
		</p>
		<label for="username">{{ 'login.username'|trans }}</label>
		<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
		<label for="password">{{ 'login.password'|trans }}</label>
		<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
		<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">{#
					            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					            See https://symfony.com/doc/current/security/remember_me.html

					            <div class="checkbox mb-3">
					                <input type="checkbox" name="_remember_me" id="_remember_me">
					                <label for="_remember_me">Remember me</label>
					            </div>
					        #}

		<!-- add some space before the submit button --><div style="height: 1em;"> </div>

		<button class="btn btn-lg btn-primary" type="submit">
			{{ 'action.sign_in'|trans }}
		</button>
	</form>
{% endblock %}
