{% extends 'base.html.twig' %}

{% block title %}Job History{% endblock %}

{% block body %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Job History</h4>
                        <p class="card-text">Your recent import and export jobs</p>
                    </div>
                    <div class="card-body">
                        {% if jobs is empty %}
                        <div class="alert alert-info">
                            <p class="mb-0">No jobs found. Start an import or export to see jobs here.</p>
                        </div>
                        {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Job ID</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Format</th>
                                        <th>Progress</th>
                                        <th>Created</th>
                                        <th>Completed</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for job in jobs %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_job_status', {jobId: job.jobId}) }}" class="text-decoration-none">
                                                <code>{{ job.jobId }}</code>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-white">{{ job.type|title }}</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ job.status == 'completed' ? 'success' : (job.status == 'failed' ? 'danger' : (job.status == 'running' ? 'warning' : (job.status == 'cancelled' ? 'secondary' : 'secondary'))) }}">
                                                {{ job.status|title }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if job.format %}
                                                <span class="text-muted">{{ job.format|upper }}</span>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if job.status == 'running' or job.status == 'completed' %}
                                            <div class="progress" style="width: 100px; height: 20px;">
                                                <div class="progress-bar"
                                                     role="progressbar"
                                                     style="width: {{ job.progressPercentage }}%"
                                                     aria-valuenow="{{ job.progressPercentage }}"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                    <small>{{ job.progressPercentage }}%</small>
                                                </div>
                                            </div>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small class="text-muted">{{ job.createdAt|date('Y-m-d H:i') }}</small>
                                        </td>
                                        <td>
                                            {% if job.completedAt %}
                                                <small class="text-muted">{{ job.completedAt|date('Y-m-d H:i') }}</small>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('app_job_status', {jobId: job.jobId}) }}"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="View Details">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                {% if job.isCompleted and job.resultFilePath %}
                                                <a href="{{ path('app_job_download', {jobId: job.jobId}) }}"
                                                   class="btn btn-outline-success btn-sm"
                                                   title="Download Result">
                                                    <i class="fa fa-download"></i>
                                                </a>
                                                {% endif %}
                                                {% if job.canBeCancelled %}
                                                <form method="post" action="{{ path('app_job_cancel', {jobId: job.jobId}) }}" style="display: inline;" onsubmit="return confirm('Cancel this job?');">
                                                    <button type="submit" class="btn btn-outline-warning btn-sm" title="Cancel Job">
                                                        <i class="fa fa-ban"></i>
                                                    </button>
                                                </form>
                                                {% endif %}
                                                {% if job.canBeReset %}
                                                <form method="post" action="{{ path('app_job_reset', {jobId: job.jobId}) }}" style="display: inline;">
                                                    <button type="submit" class="btn btn-outline-info btn-sm" title="Reset & Re-run Job">
                                                        <i class="fa fa-refresh"></i>
                                                    </button>
                                                </form>
                                                {% endif %}
                                                <form method="post" action="{{ path('app_job_delete', {jobId: job.jobId}) }}" style="display: inline;" onsubmit="return confirm('Delete this job permanently?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete Job">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% endif %}

                        <div class="mt-3">
                            <a href="{{ path('app_import_management') }}" class="btn btn-primary">
                                <i class="fa fa-upload"></i> Start Import
                            </a>
                            <a href="{{ path('app_export_management') }}" class="btn btn-success">
                                <i class="fa fa-download"></i> Start Export
                            </a>
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                <i class="fa fa-home"></i> Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-refresh for running jobs
setInterval(function() {
    const runningJobs = document.querySelectorAll('.badge-warning');
    if (runningJobs.length > 0) {
        location.reload();
    }
}, 10000); // Refresh every 10 seconds if there are running jobs
</script>
{% endblock %}
