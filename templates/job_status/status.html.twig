{% extends 'base.html.twig' %}

{% block title %}Job Status - {{ job.jobId }}{% endblock %}

{% block body %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            Job Status - {{ job.type|title }}
                            <span class="badge bg-{{ job.status == 'completed' ? 'success' : (job.status == 'failed' ? 'danger' : (job.status == 'running' ? 'warning' : (job.status == 'cancelled' ? 'secondary' : 'secondary'))) }}">
                                {{ job.status|title }}
                            </span>
                        </h4>
                        <small class="text-muted">Job ID: {{ job.jobId }}</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Type:</dt>
                                    <dd class="col-sm-8">{{ job.type|title }}</dd>

                                    <dt class="col-sm-4">Status:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-{{ job.status == 'completed' ? 'success' : (job.status == 'failed' ? 'danger' : (job.status == 'running' ? 'warning' : (job.status == 'cancelled' ? 'secondary' : 'secondary'))) }}">
                                            {{ job.status|title }}
                                        </span>
                                    </dd>

                                    <dt class="col-sm-4">Created:</dt>
                                    <dd class="col-sm-8">{{ job.createdAt|date('Y-m-d H:i:s') }}</dd>

                                    {% if job.completedAt %}
                                    <dt class="col-sm-4">Completed:</dt>
                                    <dd class="col-sm-8">{{ job.completedAt|date('Y-m-d H:i:s') }}</dd>
                                    {% endif %}

                                    {% if job.format %}
                                    <dt class="col-sm-4">Format:</dt>
                                    <dd class="col-sm-8">{{ job.format|upper }}</dd>
                                    {% endif %}
                                </dl>
                            </div>
                            <div class="col-md-6">
                                {% if job.status == 'running' or job.status == 'completed' %}
                                <div class="mb-3">
                                    <label class="form-label">Progress</label>
                                    <div class="progress">
                                        <div class="progress-bar"
                                             role="progressbar"
                                             style="width: {{ job.progressPercentage }}%"
                                             aria-valuenow="{{ job.progressPercentage }}"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ job.progressPercentage }}%
                                        </div>
                                    </div>
                                    {% if job.totalItems > 0 %}
                                    <small class="text-muted">{{ job.progress }} / {{ job.totalItems }} items processed</small>
                                    {% endif %}
                                </div>
                                {% endif %}

                                {% if job.criteria %}
                                <div class="mb-3">
                                    <label class="form-label">Criteria</label>
                                    <div class="border p-2 rounded bg-light">
                                        {% for key, value in job.criteria %}
                                            {% if value %}
                                            <small class="d-block"><strong>{{ key|title }}:</strong> {{ value }}</small>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        {% if job.errorMessage %}
                        <div class="alert alert-danger mt-3">
                            <h5>Error</h5>
                            <p class="mb-0">{{ job.errorMessage }}</p>
                        </div>
                        {% endif %}

                        {% if job.isCompleted and job.resultFilePath %}
                        <div class="alert alert-success mt-3">
                            <h5>Job Completed Successfully!</h5>
                            <p>Your {{ job.type }} job has been completed.</p>
                            <a href="{{ path('app_job_download', {jobId: job.jobId}) }}" class="btn btn-success">
                                <i class="fa fa-download"></i> Download Result
                            </a>
                        </div>
                        {% endif %}

                        <div class="mt-3">
                            {% if job.status == 'running' %}
                            <button class="btn btn-primary" onclick="refreshStatus()">
                                <i class="fa fa-refresh"></i> Refresh
                            </button>
                            {% endif %}
                            {% if job.canBeCancelled %}
                            <form method="post" action="{{ path('app_job_cancel', {jobId: job.jobId}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to cancel this job?');">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fa fa-ban"></i> Cancel Job
                                </button>
                            </form>
                            {% endif %}
                            <form method="post" action="{{ path('app_job_delete', {jobId: job.jobId}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this job? This action cannot be undone.');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash"></i> Delete Job
                                </button>
                            </form>
                            <a href="{{ path('app_jobs_list') }}" class="btn btn-secondary">
                                <i class="fa fa-list"></i> All Jobs
                            </a>
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                <i class="fa fa-home"></i> Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function refreshStatus() {
    fetch('{{ path('app_job_status_api', {jobId: job.jobId}) }}')
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                console.error('Error:', data.error);
                return;
            }

            // Update progress bar
            const progressBar = document.querySelector('.progress-bar');
            if (progressBar) {
                progressBar.style.width = data.progressPercentage + '%';
                progressBar.setAttribute('aria-valuenow', data.progressPercentage);
                progressBar.textContent = data.progressPercentage + '%';
            }

            // Update progress text
            const progressText = document.querySelector('.text-muted');
            if (progressText && data.totalItems > 0) {
                progressText.textContent = data.progress + ' / ' + data.totalItems + ' items processed';
            }

            // Reload page if status changed to completed or failed
            if (data.status === 'completed' || data.status === 'failed') {
                location.reload();
            }
        })
        .catch(error => {
            console.error('Error refreshing status:', error);
        });
}

// Auto-refresh for running jobs
{% if job.status == 'running' %}
setInterval(refreshStatus, 5000); // Refresh every 5 seconds
{% endif %}
</script>
{% endblock %}
